<html>

<head>
  <title>Star Wars People</title>
  <link rel="stylesheet" href="/css/reset.css" />
  <link rel="stylesheet" href="/css/base.css" />
  <link rel="stylesheet" href="/css/layout.css" />
  <link rel="stylesheet" href="/css/modules.css" />

  <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/handlebars.js/4.6.0/handlebars.js"></script>

</head>

<body>
  <header>
    <h1>Star Wars Characters</h1>
    <p>Vote for your favorites to show what you like!</p>
  </header>
  <main>
    <section class="characters">

      <% for(let x = 0; x < results.length; x++) { %>
      <div class="character">
        <header>

          <h2><%= results[x].name %></h2>
        </header>
        <span><%= results[x].likes || 0 %></span>
        <button class="like-me">Upvote</button>
      </div>
      <% } %>

    </section>
    <section class="dynamic-characters">
    </section>
    <script id="entry-template" type="text/x-handlebars-template">
      <div class="dynamic-character">
      <header>

        <h2>{{name}}</h2>
      </header>
      <span>{{likes}}</span>
      <button class="like-me">Upvote</button>
    </div>

    </script>
    <label for="mooooooooooore">Get More Characters
    <button id="mooooooooooore" type="button">"MOOOOOOOOOOOOOORE!"</button>
    </label>
  </main>
  <footer>
    <strong>&copy; 2020 Code Fellows</strong>
  </footer>
  <script src="/js/app.js"></script>
</body>

</html>
